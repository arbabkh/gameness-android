<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="largeButton">
        <item name="android:fontFamily">@font/proxima_nova_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="backgroundTint">@color/blue</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="mediumButton">
        <item name="android:fontFamily">@font/proxima_nova_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="backgroundTint">@color/blue</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="editText">
        <item name="android:fontFamily">@font/mark_pro</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textColor">@color/very_light_pink</item>
        <item name="android:background">@drawable/selector</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingStart">15dp</item>
    </style>

    <style name="header1">
        <item name="fontFamily">@font/mark_pro</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:lineSpacingExtra">7sp</item>
    </style>
    <style name="header2">
        <item name="fontFamily">@font/mark_pro</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>
    <style name="header3">
        <item name="fontFamily">@font/mark_pro</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">3sp</item>
    </style>
    <style name="subtitle">
        <item name="fontFamily">@font/proxima_nova_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:lineSpacingExtra">7sp</item>
    </style>
    <style name="subtitle2">
        <item name="fontFamily">@font/mark_pro</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>
    <style name="small">
        <item name="fontFamily">@font/proxima_nova_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>

    <style name="ProfileTabLayoutTextAppearance" parent="Base.Widget.Design.TabLayout">
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/mark_pro_bold</item>
    </style>

    <style name="ChildTabLayoutTextAppearance" parent="Base.Widget.Design.TabLayout">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/proxima_nova_bold</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.SendMessage" parent="">
        <item name="cornerSizeTopLeft">10dp</item>
        <item name="cornerSizeTopRight">10dp</item>
        <item name="cornerSizeBottomLeft">10dp</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
    </style>
    <style name="ShapeAppearanceOverlay.App.SelectedCornerAllRadius10" parent="">
        <item name="cornerSizeTopLeft">10dp</item>
        <item name="cornerSizeTopRight">10dp</item>
        <item name="cornerSizeBottomLeft">10dp</item>
        <item name="cornerSizeBottomRight">10dp</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
    </style>
    <style name="ShapeAppearanceOverlay.App.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>