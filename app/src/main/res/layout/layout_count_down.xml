<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView_countDownDayNumber"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/header1"
        android:text="00"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textView_countDownDayText"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/small"
        android:textSize="11sp"
        android:text="@string/day"
        android:textAllCaps="true"
        app:layout_constraintStart_toStartOf="@id/textView_countDownDayNumber"
        app:layout_constraintEnd_toEndOf="@id/textView_countDownDayNumber"
        app:layout_constraintTop_toBottomOf="@id/textView_countDownDayNumber"/>

    <TextView
        android:id="@+id/textView_dots1"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/header1"
        android:layout_marginStart="7dp"
        android:text=":"
        app:layout_constraintStart_toEndOf="@id/textView_countDownDayNumber"
        app:layout_constraintTop_toTopOf="@id/textView_countDownDayNumber"
        app:layout_constraintBottom_toBottomOf="@id/textView_countDownDayNumber"/>

    <TextView
        android:id="@+id/textView_countDownHourNumber"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/header1"
        android:text="00"
        android:layout_marginStart="7dp"
        app:layout_constraintStart_toEndOf="@id/textView_dots1"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textView_countDownHourText"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/small"
        android:textSize="11sp"
        android:text="@string/hour"
        android:textAllCaps="true"
        app:layout_constraintStart_toStartOf="@id/textView_countDownHourNumber"
        app:layout_constraintEnd_toEndOf="@id/textView_countDownHourNumber"
        app:layout_constraintTop_toBottomOf="@id/textView_countDownHourNumber"/>

    <TextView
        android:id="@+id/textView_dots2"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/header1"
        android:layout_marginStart="7dp"
        android:text=":"
        app:layout_constraintStart_toEndOf="@id/textView_countDownHourNumber"
        app:layout_constraintTop_toTopOf="@id/textView_countDownHourNumber"
        app:layout_constraintBottom_toBottomOf="@id/textView_countDownHourNumber"/>

    <TextView
        android:id="@+id/textView_countDownMinuteNumber"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/header1"
        android:text="00"
        android:layout_marginStart="7dp"
        app:layout_constraintStart_toEndOf="@id/textView_dots2"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textView_countDownMinuteText"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/small"
        android:textSize="11sp"
        android:text="@string/minute"
        android:textAllCaps="true"
        app:layout_constraintStart_toStartOf="@id/textView_countDownMinuteNumber"
        app:layout_constraintEnd_toEndOf="@id/textView_countDownMinuteNumber"
        app:layout_constraintTop_toBottomOf="@id/textView_countDownMinuteNumber"/>

    <TextView
        android:id="@+id/textView_dots3"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/header1"
        android:layout_marginStart="7dp"
        android:text=":"
        app:layout_constraintStart_toEndOf="@id/textView_countDownMinuteNumber"
        app:layout_constraintTop_toTopOf="@id/textView_countDownMinuteNumber"
        app:layout_constraintBottom_toBottomOf="@id/textView_countDownMinuteNumber"/>

    <TextView
        android:id="@+id/textView_countDownSecondNumber"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/header1"
        android:text="00"
        android:layout_marginStart="7dp"
        app:layout_constraintStart_toEndOf="@id/textView_dots3"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textView_countDownSecondText"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/small"
        android:textSize="11sp"
        android:text="@string/second"
        android:textAllCaps="true"
        app:layout_constraintStart_toStartOf="@id/textView_countDownSecondNumber"
        app:layout_constraintEnd_toEndOf="@id/textView_countDownSecondNumber"
        app:layout_constraintTop_toBottomOf="@id/textView_countDownSecondNumber"/>

</androidx.constraintlayout.widget.ConstraintLayout>