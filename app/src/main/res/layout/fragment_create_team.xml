<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.pages.personal.profile.myteam.createteam.CreateTeamFragment">

    <TextView
        android:id="@+id/textView_createTeamTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/header2"
        android:textColor="@color/white"
        android:text="@string/team_informations"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textView_createTeamName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/header3"
        android:textColor="@color/white"
        android:text="@string/team_name"
        android:layout_marginTop="30dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_createTeamTitle"/>

    <EditText
        android:id="@+id/editText_createTeamName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        style="@style/editText"
        android:inputType="text"
        android:autofillHints="name"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_createTeamName"/>

    <TextView
        android:id="@+id/textView_createTeamLogoUpload"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/header3"
        android:textColor="@color/white"
        android:text="@string/team_logo"
        android:layout_margin="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editText_createTeamName"/>

    <EditText
        android:id="@+id/editText_createTeamLogoUpload"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        style="@style/editText"
        android:clickable="false"
        android:focusable="false"
        android:cursorVisible="false"
        android:hint="@string/logo_upload"
        android:textColorHint="@color/gray"
        android:textSize="14sp"
        android:inputType="text"
        android:autofillHints="name"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        app:layout_constraintWidth_percent="0.665"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_createTeamLogoUpload"/>

    <TextView
        android:id="@+id/button_createTeamLogoUpload"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/load"
        android:background="@drawable/ic_rectangle_radius10"
        android:backgroundTint="@color/blue"
        android:gravity="center"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="15dp"
        android:fontFamily="@font/mark_pro"
        android:textStyle="normal"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/editText_createTeamLogoUpload"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/editText_createTeamLogoUpload"
        app:layout_constraintBottom_toBottomOf="@id/editText_createTeamLogoUpload"/>

    <TextView
        android:id="@+id/textView_createTeamChooseGame"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/subtitle2"
        android:textColor="@color/white"
        android:layout_margin="15dp"
        android:text="@string/choose_game"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_createTeamLogoUpload"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_createTeamChooseGame"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        app:spanCount="3"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintBottom_toTopOf="@id/button_createTeam"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_createTeamChooseGame"
        tools:listitem="@layout/item_choose_game"/>

    <Button
        android:id="@+id/button_createTeam"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/largeButton"
        android:textStyle="bold"
        android:fontFamily="@font/proxima_nova_bold"
        android:textSize="16sp"
        android:text="@string/create"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>