<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:padding="10dp"
    android:background="@drawable/ic_rectangle_radius10"
    android:backgroundTint="@color/almost_black"
    tools:context=".ui.pages.personal.tournaments.detail.tournamentroom.home.players.adapter.TournamentRoomPlayersAdapter">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageView_tournamentRoomPlayer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/tournament_room"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.SelectedCornerAllRadius10"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintWidth_percent="0.22"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:src="@drawable/welcome_bg"/>

    <TextView
        android:id="@+id/textView_tournamentRoomPlayerName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/header2"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/imageView_tournamentRoomPlayer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="Rakin"/>

</androidx.constraintlayout.widget.ConstraintLayout>