<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    tools:context=".ui.pages.personal.tournaments.detail.tournamentroom.refereechat.RefereeChatAdapter">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageView_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="@string/photograph"
        app:layout_constraintWidth_percent="0.7"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.SendMessage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:src="@drawable/welcome_bg"/>

</androidx.constraintlayout.widget.ConstraintLayout>